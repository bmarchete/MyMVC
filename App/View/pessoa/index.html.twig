{% extends "template.html.twig" %}

{% block title %}Cadastro de pessoa{% endblock %}

{% block content %}
    <div class="container">
        <div class="row" style="margin-top: 1em">
            <div class="col-md-12 ">
                <div class="header">
                    <h1>
                        Cadastro de pessoas
                        {% if message %}
                         <span class="alert-info"> {{ message }} </span>
                        {% endif %}
                    </h1>
                </div>

            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="titulo"><h2>Cadastro de pessoas</h2></div>
                <div class="borda">

                    <form method="post">
                        <div class="form-group">

                            <label for="nome">
                                Digite o nome da pessoa
                            </label>
                            <input type="text" class="form-control" id="nome" name="nome"/>
                        </div>

                        <div class="form-group">

                            <label for="cor">
                                Digite a idade da pessoa
                            </label>
                            <input type="text" class="form-control" id="cor" name="idade"/>
                        </div>

                        <div class="form-group">
                            <input type="submit" name="salvar" value="Enviar" class="btn bg-primary"/>
                        </div>

                    </form>
                </div>


            </div>

        </div>

        <div class="row" style="margin-top: 1em">
            <div class="col-md-12 ">
                <div class="borda">
                    <div class="header"><h1>Resultado</h1></div>

                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>CÃ³digo</th>
                            <th>Nome</th>
                            <th>Idade</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for pessoa in pessoas %}
                            <tr>
                                <td>{{ pessoa.id }}</td>
                                <td>{{ pessoa.nome }}</td>
                                <td>{{ pessoa.idade }}</td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>


{% endblock %}
